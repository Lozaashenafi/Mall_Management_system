<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Invoice <%= invoice.invoiceId %></title>

    <style>
      body {
        font-family: Arial, sans-serif;
        padding: 20px;
        color: #333;
      }
      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
      }
      .logo {
        width: 80px;
        height: 80px;
        background: #ccc;
        border-radius: 50%;
        text-align: center;
        line-height: 80px;
        font-weight: bold;
      }
      .section {
        margin-bottom: 20px;
      }
      .section h3 {
        margin-bottom: 5px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
      }
      table th,
      table td {
        border: 1px solid #ccc;
        padding: 8px;
      }
      table th {
        background-color: #f2f2f2;
      }
      .text-right {
        text-align: right;
      }
      .balance-due {
        margin-top: 20px;
        padding: 10px;
        background-color: #333;
        color: white;
        width: fit-content;
        font-weight: bold;
      }
    </style>
  </head>

  <body>
    <div class="header">
      <div>
        <h2>Your Company Name</h2>
        <p><%= invoice.companyAddress || "Your Address" %></p>
        <p><%= invoice.companyContact || "Contact Details" %></p>
      </div>
      <div class="logo">LOGO</div>
    </div>

    <!-- Invoice Header Section -->
    <div class="section">
      <h3>Invoice</h3>

      <p><strong>System Invoice No:</strong> <%= invoice.invoiceId %></p>

      <p>
        <strong>Paper Invoice No:</strong>
        <%= invoice.paperInvoiceNumber || "N/A" %>
      </p>

      <p>
        <strong>Date:</strong>
        <%= new Date(invoice.invoiceDate).toLocaleDateString() %>
      </p>

      <p>
        <strong>Due Date:</strong>
        <%= new Date(invoice.dueDate).toLocaleDateString() %>
      </p>

      <p>
        <strong>Status:</strong>
        <%= invoice.status %>
      </p>
    </div>

    <!-- Bill To -->
    <div class="section" style="display: flex; justify-content: space-between">
      <div>
        <h3>Bill To</h3>
        <p><%= invoice.rental?.tenant?.contactPerson || "N/A" %></p>
        <p><%= invoice.rental?.tenant?.companyName || "N/A" %></p>
        <p><%= invoice.rental?.tenant?.address || "N/A" %></p>
        <p><%= invoice.rental?.tenant?.phone || "N/A" %></p>
        <p><%= invoice.rental?.tenant?.email || "N/A" %></p>
      </div>

      <div>
        <h3>Ship To</h3>
        <p><%= invoice.rental?.tenant?.contactPerson || "N/A" %></p>
        <p><%= invoice.rental?.tenant?.companyName || "N/A" %></p>
        <p><%= invoice.rental?.tenant?.address || "N/A" %></p>
        <p><%= invoice.rental?.tenant?.phone || "N/A" %></p>
      </div>
    </div>

    <!-- Items Table -->
    <table>
      <tr>
        <th>Description</th>
        <th>Qty</th>
        <th>Unit Price (ETB)</th>
        <th>Total (ETB)</th>
      </tr>

      <tr>
        <td>Base Rent</td>
        <td>1</td>
        <td><%= invoice.baseRent?.toFixed(2) || "0.00" %></td>
        <td><%= invoice.baseRent?.toFixed(2) || "0.00" %></td>
      </tr>

      <tr>
        <td>Tax (<%= invoice.taxPercentage || 0 %>%)</td>
        <td>1</td>
        <td><%= invoice.taxAmount?.toFixed(2) || "0.00" %></td>
        <td><%= invoice.taxAmount?.toFixed(2) || "0.00" %></td>
      </tr>

      <% if (invoice.withholdingRate) { %>
      <tr>
        <td>Withholding (<%= invoice.withholdingRate %>%)</td>
        <td>1</td>
        <td>-<%= invoice.withholdingAmount?.toFixed(2) || "0.00" %></td>
        <td>-<%= invoice.withholdingAmount?.toFixed(2) || "0.00" %></td>
      </tr>
      <% } %>
    </table>

    <!-- Totals Section -->
    <div class="section text-right">
      <p>Subtotal: <%= invoice.baseRent?.toFixed(2) || "0.00" %> ETB</p>

      <p>Tax: <%= invoice.taxAmount?.toFixed(2) || "0.00" %> ETB</p>

      <% if (invoice.withholdingRate) { %>
      <p>Withholding: -<%= invoice.withholdingAmount?.toFixed(2) %> ETB</p>
      <% } %>

      <p>
        <strong>Grand Total:</strong> <%= invoice.totalAmount.toFixed(2) %> ETB
      </p>
    </div>

    <div class="balance-due">
      Balance Due: <%= invoice.totalAmount.toFixed(2) %> ETB
    </div>

    <!-- Remarks -->
    <div class="section">
      <p><strong>Remarks / Payment Instructions:</strong></p>
      <p><%= invoice.remarks || "N/A" %></p>
    </div>

    <!-- PDF Link -->
    <% if (invoice.pdfUrl) { %>
    <div class="section">
      <p>
        <strong>Download PDF:</strong>
        <a href="<%= invoice.pdfUrl %>" target="_blank">Click here</a>
      </p>
    </div>
    <% } %>
  </body>
</html>
